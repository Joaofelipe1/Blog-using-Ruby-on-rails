<%= form_with model: post do |form| %>

<div class= "form-inputs">

<%= form.text_field :title, class: 'form-control string' %>

<%= form.label :thumbnail, class:'form-control' %>
<%= form.file_field :thumbnail%>

<%= form.label :banner, class:'form-control' %>
<%= form.file_field :banner %>


<%= form.rich_text_area :body %>

</div>

<div class= "form-actions">
    <%= form.submit %>
</div>
<% end %>