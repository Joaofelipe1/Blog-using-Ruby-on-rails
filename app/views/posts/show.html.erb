
<h1><%= @post.title %></h1>

<%= @post.body %>

<ul>
<li><%= link_to "Editar", edit_post_path(@post) %> </li>
<li><%= link_to "Deletar", post_path(@post), data:{
    turbo_method: :delete,
    turbo_confirm: "Tem certeza que deseja deletar?"
    } %></li>

    <h2>Comentários</h2>
    <%= render @post.comments %>

    <h2>Adicione um comentário:</h2>
    <%= render 'comments/form' %>
</ul>